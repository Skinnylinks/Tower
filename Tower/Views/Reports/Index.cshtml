@model Tower.ViewModels.selectDropDown
@{
    ViewBag.Title = "Florida Tax Certificates";
    Html.EnableUnobtrusiveJavaScript(true);
}

@{ Html.EnableClientValidation(true); }
<h2>Florida Tax Certificates</h2>
<h3>Select Report Parameters</h3>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "myform" }))  
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.qcounty, "County*", htmlAttributes: new { @class = "control-label" })@Html.ValidationMessageFor(model => model.county, "", htmlAttributes: new { @class = "text-danger" })

        @Html.DropDownListFor(model => model.county, Model.qcounty, String.Empty, htmlAttributes: new { @class = "form-control flddlist", @id = "county" })
        @Html.Label("Last Update", new { @class = "control-label" })
        <p id="lastdt">

        </p>
        <div id='loadingmessage' style='display:none'>
            <img src='~/images/preview.gif' />
        </div>
        @Html.LabelFor(model => model.paction, "Action*", htmlAttributes: new { @class = "control-label" })@Html.ValidationMessageFor(model => model.paction, "", htmlAttributes: new { @class = "text-danger" })

        @Html.DropDownListFor(model => model.paction, Model.qaction, String.Empty, htmlAttributes: new { @class = "form-control flddlist" })

        @Html.Label("Select Issue Date (Optional)", new { @class = "control-label" })
        @Html.DropDownListFor(model => model.pissdt, Model.issdt, "Select Issue Date", htmlAttributes: new { @class = "form-control flddlist", @id = "issdt" })

        <div id='loadingmessage1' style='display:none'>
            <img src='~/images/preview.gif' />
        </div>

       

        @Html.LabelFor(model => model.Cert, "Select Item*", htmlAttributes: new { @class = "control-label" }) @Html.ValidationMessageFor(model => model.qparam1, "", htmlAttributes: new { @class = "text-danger" })
        @Html.DropDownListFor(model => model.qparam1, Model.param1, String.Empty, htmlAttributes: new { @class = "form-control flddlist" })

        @Html.LabelFor(model => model.Account, "Select Item  (Optional)", htmlAttributes: new { @class = "control-label" })

        @Html.DropDownListFor(model => model.qparam2, Model.param2, "Select Report Parameter", htmlAttributes: new { @class = "form-control flddlist" })

        @Html.Raw(ViewBag.csv)

    </div>
    <div class="form-group">
        <div id='loading' style='display:none'>
            <img src='~/images/ajax-loader.gif' />
        </div>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Report" class="btn btn-default" />
        </div>
    </div>

}



