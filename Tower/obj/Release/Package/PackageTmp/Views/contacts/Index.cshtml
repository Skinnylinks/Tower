
@model IEnumerable<Tower.Models.contact>


@{
    ViewBag.Title = "Index";
    Layout = null;//"~/Views/Shared/_Layout.cshtml";
}

<h2>Contacts</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { lid = Model.FirstOrDefault().CID })
</p>
<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.CID)
            </th>*@
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>

        <th>
            Phone Number
        </th>
        <th>
            Ext.
        </th>
        <th>
            Cell Phone
        </th>
        <th>
            Email Address
        </th>

        <th>
            Notes
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.CID)
                    </td>*@
                <td>

                    @Html.DisplayFor(modelItem => item.ContactFirstName)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ext)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cellphone)
                </td>
                <td>
                    <a href="mailto:@Html.DisplayFor(modelItem => item.EmailAddress)">@Html.DisplayFor(modelItem => item.EmailAddress)</a>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.notes)
                </td>
                @if (item.ContactFirstName != null)
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CNTYID }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.CNTYID }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.CNTYID })
                    </td>}
            </tr>
        }
    }

</table>
